        <div class="containerz">
            <div class="headerz">
                <h1>WebChat</h1>
            </div>
            <div class="bodyz">
                <div id="chatBody">
                    <p class="messagez">hello</p>
                    <p id="gh" class="messagez user_message">Hi</p>
                </div>            
            </div>
            <div class="footerz">
                <!-- <form> -->
                    <!-- id="chatInput"  -->

<form action="/user/send-message" method="post" onclick="sendMsg()">



                    <input type="text" name="content">
                    <button type="submit">
                        <img class="sendicon" src="img/download.png" alt="send icon">
                    </button>
                </form>
                <!-- </form> -->
            </div>
        </div>
    </div>
</body>
</html>