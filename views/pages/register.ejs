<!DOCTYPE html>
<html lang="en" dir="Itr">

<head>
    <meta charset="UTF-8">
    <title> Login and registration form in HTML & CSS</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <script src="/js/ajax.js"></script>
    <script>
        function validate() {
            if (document.getElementById('unresult').innerHTML.includes('taken'))
                return false;
            else
                return true;
        }
    </script>
</head>

<body>
    <%- include("../partials/localization") %>
    <div class="nav">
    </div>
    <div class="container">
        <input type="checkbox" id="flip" class="m2">
        <div class="cover">
            <div class="front">
                <img src="/img/13.jpg" alt="">
            </div>
        </div>
        <form action="/user/login-action" method="post">
            <div class="form-content">
                <div class="login-form">
                    <div class="title"> Login </div>
                    <div class="input-boxes">
                        <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input type="text" name="logusername" placeholder="Enter your username"required>
                        </div>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="logpassword" placeholder="Enter your password" required>
                        </div>
                        <div class="button input-box">
                            <input type="submit" value="Submit">
                        </div>
                        <br>
                        <br>
                        <div class="text"> Don't have an account?
                            <br>
                            <br>
                            <label for="flip"> Sign up now </label>
                        </div>
                    </div>
                </div>
                <br>
        </form>
        <form action="/user/signup-action" method="post" onsubmit="return validate()">
            <div class="signup-form">
                <div class="title">Sign Up</div>
                <div class="input-boxes">
                    <% if (errors && errors.length> 0) { %>
                        <div class="error-box">
                            <% for (let i=0; i < errors.length; i++) { %>
                                <p>
                                    <%= errors[i].msg %>
                                </p>
                                <% } %>
                        </div>
                        <% } %>
                            <div class="input-box">
                                <i class="fas fa-user"></i>
                                <input type="text" name="username" id="username" placeholder="Enter your username" required>
                                <span id="unresult"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input type="password" name="password" placeholder="Enter your password" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input type="password" name="confirmPassword" placeholder="Enter your confirm password" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input type="email" name="email" id="email" placeholder="Enter your email" required>
                                <span id="emailresult"></span>
                                <input type="hidden" name="type" value="client">
                            </div>
                            <script scr="/js/ajax.js"> </script>
                            <script scr="/js/ajax.js"> </script>
                            <script scr="/js/ajax.js"> </script>


                            <script scr="https://ajax.googleaois.com/ajax/libs/jquery/3.6.4/jquery.min.js"> </script>
                            <div class="button input-box">
                                <input type="submit" value="Submit">
                            </div>
                            <br>
                            <br>
                            <div class="text"> Have already account?
                                <br>
                                <br>
                                <label for="flip">Login Now </label>
                            </div>
                </div>
            </div>
        </form>
    </div>


    </div>

</body>

</html>