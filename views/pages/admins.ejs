                                                    <td>
                                                        <%=count%>
                                                    </td>
                                                    <td>
                                                        <a href="/user/<%=admin.id%>">
                                                            <%=admin.username%>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%=admin.email%>
                                                    </td>
                                                    <td><a href="/user/edituser/<%=admin.id%>"><button>Edit
                                                                admin</button></a></td>
                                                    <td><a href="/admin/deleteuser/<%=admin.id%>"><button>Delete
                                                                admin</button></a></td>
                                                    <td>
                                                        <form action="/admin/makeuser/<%=admin.id%>" method="POST">
                                                            <button type="submit">Make user</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% count++;%>
                                                    <% })%>
                                                        <% } else { %>
                                                            <p>No admins found </p>
                                                            <% }%>
                                </tbody>
                            </table>
