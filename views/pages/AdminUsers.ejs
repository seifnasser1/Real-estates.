                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>Make Admin</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (Users.length> 0){%>
                    <% var count=1; %>
                      <% Users.forEach(Client=>{%>
                        <tr>
                          <td>
                            <%=count%>
                          </td>
                          <td>
                            <a href="/user/<%=Client.id%>">
                              <%=Client.username%>
                            </a>
                          </td>
                          <td>
                            <%=Client.email%>
                          </td>
                          <td><a href="/user/edituser/<%=Client.id%>"><button>Edit User</button></a></td>
                          <td><a href="/admin/deleteuser/<%=Client.id%>"><button>Delete User</button></a></td>
                          <td>
                            <form action="/admin/makeadmin/<%=Client.id%>" method="POST">
                              <button type="submit">Make Admin</button>
                            </form>
                          </td>
                        </tr>
                        <% count++;%>
                          <% })%>
                            <% } else { %>
                              <p>No Users found </p>
                              <% }%>
                </tbody>
              </table>
